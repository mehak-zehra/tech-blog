<header class="mb-4">
  {{> logged-in-header}}
</header>

<div class="basic-page container-fluid">
  <div class="d-flex flex-row justify-content-between mb-4">
    <h3 class="pl-3">MY BLOG POSTS</h3>
    <button type="button" class="btn btn-dark btn-lg" onclick="goToCreatePostPage()">+ Create Post</button>
  </div>

  <div id="accordion">
    {{#each myPosts}}
    <div class="card mb-3 pb-3">
      <div class="card-header" id="headingOne">
        <div class="d-flex flex-row justify-content-between">
          <h3 class="mb-0">

            <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true"
              aria-controls="collapseOne">
              {{title}}
            </button>
          </h3>
          <p>posted on {{date}}</p>
        </div>
      </div>

      <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body">
          <div>
            {{content}}
          </div>
          <div class="float-right">
            <img class="clickable" src="/assets/images/icons8-trash-can-50.png" width="35" height="35">
            <img class="clickable" src="/assets/images/icons8-edit-50.png" width="35" height="35">
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<script src="assets/js/global.js"></script>